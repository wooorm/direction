{
  "name": "direction",
  "version": "1.0.0",
  "description": "Detect directionality: left-to-right, right-to-left, or neutral",
  "license": "MIT",
  "keywords": [
    "writing",
    "system",
    "direction",
    "directionality",
    "rtl",
    "ltr",
    "cli",
    "bin"
  ],
  "repository": "https://github.com/wooorm/direction",
  "bugs": "https://github.com/wooorm/direction/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "bin": "cli.js",
  "files": [
    "index.js",
    "cli.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "execa": "^0.5.0",
    "nyc": "^8.3.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.4.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js -s direction > direction.js",
    "build-mangle": "esmangle direction.js > direction.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "rules": {
      "unicorn/explicit-length-check": "off",
      "quote-props": "off"
    },
    "ignores": [
      "direction.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
